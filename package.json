    "@prisma/client": "^6.2.1",
    "bcrypt": "^5.1.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "node-cron": "^3.0.3",
    "superjson": "^1.13.3",
    "twilio": "^5.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
